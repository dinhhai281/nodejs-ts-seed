{
  "name": "nodejs-typescript-template",
  "version": "0.0.1",
  "description": "A template to start a Nodejs project with Typescript, eslint and prettier",
  "main": "index.js",
  "scripts": {
    "lint": "eslint ./src/**/*.{ts,js}",
    "clean": "rm -rf ./dist",
    "build": "tsc",
    "build:clean": "npm run clean && tsc",
    "build:watch": "tsc -w",
    "start": "node ./dist/index.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "tslib": "^2.1.0"
  },
  "devDependencies": {
    "@types/node": "^14.14.25",
    "@typescript-eslint/eslint-plugin": "^4.15.0",
    "@typescript-eslint/parser": "^4.15.0",
    "eslint": "^7.19.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-prettier": "^3.3.1",
    "prettier": "^2.2.1",
    "typescript": "^4.1.4"
  }
}
